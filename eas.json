{
  "cli": {
    "version": ">= 12.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true,
        "buildConfiguration": "debug"
      },
      "env": {
        "NODE_ENV": "development"
      }
    },
    "production": {
      "developmentClient": false,
      "distribution": "internal",
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": false,
        "buildConfiguration": "release"
      },
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
